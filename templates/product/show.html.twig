{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col text-center">
            <h1>Product</h1>
        </div>
    </div>

    <div class="row my-5">
        <div class="col-2 offset-6">
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" role="button" class="btn btn-warning w-100">Edit product</a>
        </div>
        <div class="col-2">
            {{ include('product/_delete_form.html.twig') }}
        </div>
        <div class="col-2">
            <a href="{{ path('app_product_index') }}" role="button" class="btn btn-secondary w-100">Back to the list</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Quantity</th>
                    <td>{{ product.quantity }}</td>
                </tr>
                <tr>
                    <th>Reference</th>
                    <td>{{ product.reference }}</td>
                </tr>
                <tr>
                    <th>Date of creation</th>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Last update</th>
                    <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
